# Forcefield/Topology/Coordinate Information
amber yes
parmfile complex.top
readexclusions no
coordinates  complex.pdb

# Unchanging information
################################################################################
# Force-Field Parameters
exclude             scaled1-4
1-4scaling          0.833333
cutoff              12.
switching           on
switchdist          10.
pairlistdist        13.5
# Integrator Parameters
timestep            2.0  ;# 2fs/step
rigidBonds          all  ;# needed for 2fs steps
rigidtolerance      0.00001
rigidIterations     100
nonbondedFreq       1
fullElectFrequency  2
stepspercycle       10
wrapWater           on
wrapAll             on
# Output
outputEnergies      1000
outputPressure      1000
################################################################################

# Protocol specific information
cellBasisVector1        79.964   0.000  0.000
cellBasisVector2         0.000  67.897  0.000
cellBasisVector3         0.000   0.000 95.188
cellOrigin               0.000   0.000  0.000

PME                 yes
PMEGridSizeX        80
PMEGridSizeY        72
PMEGridSizeZ        96

# Output and restart
binaryoutput        yes
outputname          eq0

# Constraints
constraints  on
consexp  2
consref  complex.pdb ;#need all positions
conskfile  cons.pdb
conskcol  O
temperature 50

# protocol - minimization
set factor 10
set nall 10
set n 1

minimization    on
while {$n <= $nall} {
   constraintScaling $factor
   minimize 1000
   set n [expr $n + 1]
   set factor [expr $factor * 0.5]
}

constraintScaling 0
minimize 1000

